@page
@model Farmacia.Pages.Ventas.IndexModel
@{

    ViewData["Title"] = "Lista de Ventas";
}

<div class="container">

    <div class="row">

        <div class="col-sm-9">

            <h2 class="text-info">Lista de Ventas</h2>

        </div>

        <div class="col-3">

            <a class="btn btn-secondary" asp-page="/Ventas/Crear">Crear Nueva Venta</a>

        </div>
    </div>

    @if (Model.Ventas.Count() > 0)
    {

        <table id="tblVentas" class="table table-striped table-bordered" style="width: 100%;">

            <thead>
                <tr>

                    <th></th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().Nombre)</th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().Medicamento)</th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().Categoria)</th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().Empleado)</th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().Precio)</th>

                    <th> @Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().FechaVenta)</th>

                    <th></th>

                </tr>
            </thead>

            <tbody>

                @foreach (var Venta in Model.Ventas)
                {

                <tr>

                    <td>@Html.DisplayFor(m => Venta.Id)</td>

                    <td>@Html.DisplayFor(m => Venta.Nombre)</td>

                    <td>@Html.DisplayFor(m => Venta.Medicamento.Nombre)</td>

                    <td>@Html.DisplayFor(m => Venta.Categoria.Nombre)</td>

                    <td>@Html.DisplayFor(m => Venta.Empleado.Nombre)</td>

                    <td>@Html.DisplayFor(m => Venta.Precio)</td>

                    <td>@Html.DisplayFor(m => Venta.FechaVenta)</td>

                    <td>

                        <a class="btn btn-success" asp-page="../Ventas/Detalle" asp-route-id="@Venta.Id">Detalle</a>

                        <a class="btn btn-warning" asp-page="../Ventas/Editar" asp-route-id="@Venta.Id">Editar</a>

                        <a class="btn btn-danger" asp-page="../Ventas/Borrar" asp-route-id="@Venta.Id">Borrar</a>

                    </td>

                </tr>


                }

            </tbody>

        </table>
    }

    else
    {

        <p> No hay Ventas </p>

    }
</div>


