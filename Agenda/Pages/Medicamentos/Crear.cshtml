@page
@model Farmacia.Pages.Medicamentos.CrearModel
@{

    ViewData["Title"] = "Crear un Medicamento";

}



<div class="container">
    <div class="row">

        <div class="col-8 offset-2">

            <h2 class="text-info">Crear un Nuevo Medicamento</h2>

            <form method="POST">
                <div class="mb-3">

                    <label asp-for="MedicamentoVM.Medicamento.Nombre" class="form-label"></label>

                    <input asp-for="MedicamentoVM.Medicamento.Nombre" class="form-control" placeholder="Ingresa el nombre" />

                    <span asp-validation-for="MedicamentoVM.Medicamento.Nombre" class="text-danger"></span>

                </div>


                <div class="mb-3">

                    <label asp-for="MedicamentoVM.Medicamento.ViaAdministracion" class="form-label">Via de Administracion</label>

                    <input asp-for="MedicamentoVM.Medicamento.ViaAdministracion" class="form-control" placeholder="Via de Administracion" />

                    <span asp-validation-for="MedicamentoVM.Medicamento.ViaAdministracion" class="text-danger"></span>

                </div>

               
                <!-- Aqui la lista de categiorias-->
                <div class="mb-3">

                    <label asp-for="MedicamentoVM.Medicamento.Categoria" class="form-label"></label>


                    <select asp-for="MedicamentoVM.Medicamento.CategoriaId" asp-items="@(new SelectList(Model.MedicamentoVM.ListaCategorias ,"Id","Nombre"))" class="form-control">
                    </select>

                </div>

                <div class="mb-3">

                    <label asp-for="MedicamentoVM.Medicamento.Categoria" class="form-label">Laboratorio</label>

                    <select asp-for="MedicamentoVM.Medicamento.CategoriaId" asp-items="@(new SelectList(Model.MedicamentoVM.ListaCategorias ,"Id","Laboratorio"))" class="form-control">
                    </select>

                </div>



                <div class="mb-3">

                    <label asp-for="MedicamentoVM.Medicamento.FechaVencimiento" class="form-label"></label>

                    <input asp-for="MedicamentoVM.Medicamento.FechaVencimiento" class="form-control" />
                    <span asp-validation-for="MedicamentoVM.Medicamento.FechaVencimiento" class="text-danger"></span>

                </div>

                <button type="submit" class="btn btn-primary">Crear Medicamento</button>

            </form>

        </div>

    </div>

    <div class="row">

        <div class="col-6">

            <a asp-page="Index" class="btn btn-success">volver</a>
        </div>
    </div>

</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />


}

